<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="iv_product_style">
        <item name="android:layout_width">@dimen/iv_product_width</item>
        <item name="android:layout_height">@dimen/iv_product_height</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/placeholder_product</item>
    </style>

    <style name="tv_product_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_product_price_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>